<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="?android:attr/listPreferredItemPaddingStart"
    android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
    android:minHeight="?android:attr/listPreferredItemHeightLarge"
    android:textAppearance="?android:attr/textAppearanceListItemSmall">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height= "wrap_content"
        android:layout_marginVertical="10dp"
        android:id="@+id/cv">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/item_image"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginVertical="10dp"/>
                <LinearLayout
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/item_name"
                        style="@style/textColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="8dp"
                        android:text="Name"/>
                    <TextView
                        android:id="@+id/item_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/favoriteColor"
                        android:layout_marginBottom="5dp"
                        android:text="Price"/>
                    <TextView
                        android:id="@+id/item_inventory"
                        style="@style/textColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="show Inventory"/>
                    <TextView
                        android:id="@+id/item_addedDate"
                        style="@style/textColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="show Date"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_gravity="bottom">
                <Button
                    android:id="@+id/deleteItemButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/favoriteColor"
                    android:minWidth="100dp"
                    android:layout_marginRight="10dp"
                    android:drawableLeft="@drawable/ic_delete"
                    android:textColor="@color/toolbarColorLight"
                    android:text="@string/deleteMerchandise"/>
                <Button
                    android:id="@+id/addCartButton"
                    style="@style/ButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="100dp"
                    android:drawableLeft="@drawable/ic_add_cart"
                    android:textColor="@color/toolbarColorLight"
                    android:text="@string/addToCart"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>